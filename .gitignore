# Ignore bundler config
/.bundle

# Ignore the default SQLite database
/db/*.sqlite3
/db/*.sqlite3-journal

# Ignore uploaded files (e.g., Active Storage)
 /storage

# Ignore log files and temp files
/log/*
/tmp/*
!/log/.keep
!/tmp/.keep

# Ignore pid files and server socket
/tmp/pids/*
/tmp/sockets/*

# Ignore byebug history file
.byebug_history

# Ignore RubyMine project files (если используете IDE)
.idea/

# Ignore VSCode settings (если используете VSCode)
.vscode/

# Ignore node modules (если есть frontend с npm/yarn)
node_modules/

# Ignore yarn lock file if you don't want to track it (обычно лучше оставить)
# /yarn.lock

# Ignore environment variables
.env
.env.*.local

# Ignore secret credentials (если есть)
config/master.key
config/credentials.yml.enc

# Ignore coverage reports (например, SimpleCov)
/coverage/

# Ignore other IDE configs or OS files
.DS_Store
Thumbs.db